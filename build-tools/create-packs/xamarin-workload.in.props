<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <TargetName>Microsoft.NET.Sdk.Android.Workload</TargetName>
    <_FullWorkloadName>android</_FullWorkloadName>
  </PropertyGroup>
  <ItemGroup>
    <!-- Shorten package names to avoid long path caching issues in Visual Studio -->
    <ShortNames Include="microsoft.android.sdk.bundletool;Microsoft.Android.Sdk.BundleTool">
      <Replacement>Microsoft.BundleTool</Replacement>
    </ShortNames>
    <ComponentResources Include="$(_FullWorkloadName)" Category=".NET" Title=".NET Android Workload" Description="Build Tools and Bindings for the Android SDK."/>
    <ComponentVersions Include="$(_FullWorkloadName)" Version="@WORKLOAD_VERSION@" />
  </ItemGroup>
</Project>
