<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <TargetName>Microsoft.NET.Sdk.Android.Workload</TargetName>
  </PropertyGroup>
  <ItemGroup>
    <!-- Shorten package names to avoid long path caching issues in Visual Studio -->
    <ShortNames Include="microsoft.android.sdk.bundletool;Microsoft.Android.Sdk.BundleTool">
      <Replacement>XABundleTool</Replacement>
    </ShortNames>
    <ShortNames Include="microsoft.android.runtime;Microsoft.Android.Runtime">
      <Replacement>XARuntime</Replacement>
    </ShortNames>
    <ComponentResources Include="android" Category=".NET" Title=".NET Android Workload" Description="Microsoft Android SDK for .NET"/>
    <ComponentVersions Include="android" Version="@WORKLOAD_VERSION@" />
    <ComponentResources Include="android-aot" Category=".NET" Title=".NET Android AOT Workload" Description="Microsoft Android SDK for .NET with AOT support"/>
    <ComponentVersions Include="android-aot" Version="@WORKLOAD_VERSION@" />
  </ItemGroup>
</Project>
